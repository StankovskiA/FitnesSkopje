<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div id="navigation" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("FitnesSkopje", "Index", "Home", new { area= " " }, new { @class = "navbar-brand" })*@
                @*<div>
                    <a href='@Url.Action("Index", "Home")'>
                        <img class="teg" src="~/Images/teg1.png" />
                    </a>
                </div>*@
                <div>
                    <a href='@Url.Action("Index", "Home")'>
                        <img class="logo" src="~/Images/logo1-_transp_.png" />
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="items-nav">
                        <a href='@Url.Action("Index", "Gyms")'>
                            Gyms
                        </a>
                    </li>

                    @if (User.IsInRole("User"))
                    {
                        @*<li>@Html.ActionLink("My Favourites", "UserFavourites", "Favourites")</li>
                        <li>@Html.ActionLink("My Reviews", "UserReviews", "Reviews")</li>*@

                        <li class="items-nav">
                            <a  href='@Url.Action("UserFavourites", "Favourites")'>
                                My Favourites
                            </a>
                        </li>
                        <li class="items-nav">
                            <a href='@Url.Action("UserReviews", "Reviews")'>
                                My reviews
                            </a>
                        </li>
                    }

                    @*<li>@Html.ActionLink("Contact us", "Contact", "Home")</li>*@
                    <li class="items-nav">
                        <a  href='@Url.Action("Contact", "Home")'>
                            Contact us
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Gym Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () { $("input").attr("autocomplete", "off"); }); 
    </script>
</body>
</html>
